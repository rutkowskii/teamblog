<!DOCTYPE html>

<html ng-app="teamblog">
<head>
    <title>title</title>

    <script src="@Url.Content("~/Scripts/angular.js")"></script>
    <script src="@Url.Content("~/Scripts/moment.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-ui/ui-bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/my-app/root.js")"></script>
    <link href="@Url.Content("~/Styles/main.css")" rel="stylesheet" type="text/css"/>
</head>
<body>
<div>
    <div id="top-panel" ng-controller="user-profile">
        <div>Logged in as {{login}}</div>
    </div>
    <div id="posts" ng-controller="posts">
        <div ng-repeat="post in posts">
            <div class="post">

                <div class="post-title">
                    {{post.AddedBy}} on {{post.Timestamp}} in {{post.Channel}}
                </div>
                <div class="post-content">
                    {{post.Content}}
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>